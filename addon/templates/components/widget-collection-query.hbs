<div class="panel panel-default">
    {{#if label}}
        <div class="panel-heading">{{{label}}}</div>
    {{/if}}

    <div class="panel-body">

        <ul class="list-unstyled">

        {{#each filter in filters}}
            <li>
                <div class="form-inline">
                    <div class="form-group">
                        <button class="btn btn-default btn-sm" style="color:red;border:0;font-weight:bolder;font-size:18px" {{action 'removeFilter' filter}}>&times;</button>
                    </div>
                    {{query-filter queryFilter=filter modelMeta=routeModel.meta}}
                </div>
            </li>
        {{/each}}

        </ul>

        <button class="btn btn-default" {{action 'addFilter'}}>+</button>
        <button class="btn btn-primary" {{action 'updateCollection'}}>search</button>
    </div>
</div>